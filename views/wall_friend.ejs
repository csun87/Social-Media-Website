    </div>
    <div id="user-info"></div>
    <div id="remove-friend-button-container">
      <button id="remove-friend-button" class="btn btn-primary">Remove Friend</button>
  </div>
    <div id="post-box" style="width: 80%; height: 80%; align-self: center;">
      <form id="make-post-form">
        <div class="form-group">
          <input id="make-post-text" type="text" class="form-control" id="make-post-text" placeholder="Write a post here">
        </div>
        <input id="make-post-button" type="submit" class="btn btn-primary" value="Make Post">
      </form>
    </div>
    <div id="posts" class="container"></div>
  </body>
  <script>
    const user = new URLSearchParams(window.location.search).get("username");
    $(document).ready(function() {
      $("#wall-nav-bar").attr("href", "/wall?username=<%= username %>");
      $.post("/getuser", {username: user}, function(x) {
        const data = x.data;
        $("#user-info").append("<h1>" + data.firstname.S + " " + data.lastname.S + "</h1>");
        $("#user-info").append("<h4>" + data.affiliation.S + "</h4>");
        $(document).attr("title", data.firstname.S + " " + data.lastname.S);
      });

      $.post("/getpostsbyauthor", {author: user}, function(out) {
        const posts = []
        out.data.sort(function(x, y) {
          return y.timestamp.N - x.timestamp.N;
        })
        out.data.forEach(function(post) {
          var p = post.author.S + "$" + post.timestamp.N.toString();
          const date = new Date(parseInt(post.timestamp.N));
          var post = '<div class="card" style="width: 18rem;"><div class="card-body"><h5 class="card-title">' + post.author.S + 
            '</h5><h6 class="card-subtitle mb-2 text-muted">' + date.toString() + 
              '</h6><p class="card-text">' + post.content.S + 
                '</p></div>';
          const commentsData = {
            authortime : p
          }
          $.post("/getcomments", commentsData, function(comments) {
            comments.data.Items.forEach(function(comment) {
              const commentDate = new Date(parseInt(comment.timestamp.N));
              post = post + '<h5 class="card-subtitle">' + comment.author.S + '</h5>';
              post = post + '<h6 class="card-subtitle mb-2 text-muted">' + commentDate.toString() + '</h6>';
              post = post + '<p class="card-text">' + comment.content.S + '</p>';
            });
            const commentFormId = 'make-comment-form-' + p;
            post = post + '<form id="' + commentFormId + '">'  
              + '<div class="form-group">'
              + '<input id="' + p + '-make-comment-text" type="text" class="form-control" placeholder="Enter comment">'
              + '</div>'
              + '<input id="make-comment-button" type="submit" class="btn btn-primary" value="Post comment">'
              + '</form>'
              + '</div>';
            $("#posts").append(post + "</div>");
            var temp = '#' + commentFormId;
            temp = temp.replace(/\$/g, "\\$");
            $(temp).submit(function(event) {
              event.preventDefault();
              const data = {
                key: p,
                content: document.getElementById(p + '-make-comment-text').value,
              };
              if (data.content.length === 0) {
                alert("You cannot make an empty comment");
              } else {
                $.post("/makecomment", data, function(x) {
                  if (x.success) {
                    location.reload(); // REPLACE LATER WITH NON-RELOAD FUNCTION THAT DYNAMICALLY REFRESHES PAGE
                  } else {
                    alert(x.msg);
                  }
                });
              }
            });
          });
        });

        $("#remove-friend-button").click(function(event) {
        event.preventDefault();
        const toSend = {
            friend: user
        };
        $.post("/addfriend", toSend, function(x) {
            if (x.success) {
                location.reload();
            } else {
                alert(x.msg);
            }
        })
      });
      });
    });
  </script>
</html>