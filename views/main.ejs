<!DOCTYPE html>
<html>
  <head>
    <title>PennBook</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <span class="navbar-brand" href="#" style="padding-left: 10px">PennBook</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/feed">Feed<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Wall</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Chat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Visualizer</a>
            </li>
          </ul>
          <ul class="navbar-nav my-2 my-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="/signout">Sign Out</a>
            </li>
          </ul>
          <ul>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
          </ul>
        </div>
      </nav>
    </div>
    <div id="post-box" style="width: 80%; height: 80%; align-self: center;">
      <form id="make-post-form">
        <div class="form-group">
          <input id="make-post-text" type="text" class="form-control" id="make-post-text" placeholder="Write a post here">
        </div>
        <input id="make-post-button" type="submit" class="btn btn-primary" value="Make Post">
      </form>
    </div>
  </body>
  <script>
    $(document).ready(function() {
      $("#make-post-form").submit(function(event) {
        event.preventDefault();
        const data = {
          content : document.getElementById("make-post-text").value
        }
        if (data.content.length === 0) {
          alert("You cannot make an empty post");
        } else {
          $.post("/makepost", data, function(x) {
            if (x.success) {
              window.location.assign("/feed");
            } else {
                alert(x.msg);
            }
          });
        }
      });
    });
  </script>
</html>