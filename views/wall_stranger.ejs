<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <span class="navbar-brand" href="#" style="padding-left: 10px">PennBook</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/feed">Feed</a>
            </li>
            <li class="nav-item disabled">
              <a id ="wall-nav-bar" class="nav-link" href="/wall">Wall</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/chat">Chat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Visualizer</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/search">Search</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/newsfeed">News</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/searchnews">Search News</a>
          </li>
          </ul>
          <ul class="navbar-nav my-2 my-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="/signout">Sign Out</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
    <div id="user-info"></div>
    <div>You are not friends with this user! To see their information, you must become friends.</div>
    <div id="add-friend-button-container">
        <button id="add-friend-button" class="btn btn-primary">Add Friend</button>
    </div>
  </body>
  <script>
    const user = new URLSearchParams(window.location.search).get("username");
    $(document).ready(function() {
      $("#wall-nav-bar").attr("href", "/wall?username=<%= username %>");
      $.post("/getuser", {username: user}, function(x) {
        const data = x.data;
        $("#user-info").append("<h1>" + data.firstname.S + " " + data.lastname.S + "</h1>");
        $("#user-info").append("<h4>" + data.affiliation.S + "</h4>");
        $(document).attr("title", data.firstname.S + " " + data.lastname.S);
      });
      $("#add-friend-button").click(function(event) {
        event.preventDefault();
        const toSend = {
            friend: user
        };
        $.post("/addfriend", toSend, function(x) {
            if (x.success) {
                location.reload();
            } else {
                alert(x.msg);
            }
        })
      });
    });
  </script>
</html>